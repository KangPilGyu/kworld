<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">
  
<tiles-definitions>
	
	<!-- main tiles 설정 -->
   <definition name="main.*" template="/WEB-INF/views/inc/layout.jsp">
   	  <put-attribute name="common" value="/WEB-INF/views/inc/common.jsp"></put-attribute>
      <put-attribute name="header" value="/WEB-INF/views/inc/header.jsp"></put-attribute>
      <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
      <put-attribute name="content" value="/WEB-INF/views/{1}.jsp"></put-attribute>
   </definition>
   
   	<!--board tiles 설정 -->
   <definition name="board.*" template="/WEB-INF/views/board/layout.jsp">
