      <put-attribute name="footer" value="/WEB-INF/views/inc/footer.jsp"></put-attribute>
      <put-attribute name="content" value="/WEB-INF/views/board/{1}.jsp"></put-attribute>
   </definition>

	<!-- join tiles 설정 -->
