<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="org.web.kworld.news.NewsMapper">

<select id="selectNews" resultType="org.web.kworld.news.vo.NewsVO">
<![CDATA[
select *
from news
order by n_no
]]>
</select>

<select id="count" resultType="int">
select count(*)
from news
</select>

<select id="newsOne" resultType="org.web.kworld.news.vo.NewsVO">
select *
from news
where n_no = #{n_no}
</select>


<update id="updateNews">
update news
set n_title = #{n_title},
	n_content = #{n_content},
	n_content2 = #{n_content2}
where n_no = #{n_no}
</update>



<insert id="newsInsert">
insert into news (n_no,n_title,n_content,n_content2)
values #{n_no},#{n_title},#{n_content},#{n_content2}
</insert>

</mapper>